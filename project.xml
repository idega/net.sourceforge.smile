<project>
    <extend>../com.idega.core.bundle/base-project.xml</extend>
    <name>idegaWeb WebFace</name>
    <groupId>bundles</groupId>
    <artifactId>net.sourceforte.smile</artifactId>
    <currentVersion>0.3</currentVersion>
    <inceptionYear>2003</inceptionYear>
    <shortDescription>Smile is an implementation of JavaServer Faces</shortDescription>
    <issueTrackingUrl>http://issues.idega.is</issueTrackingUrl>
    <repository>
        <connection>scm:cvs:ext:idegaweb@einstein.idega.is:/idega/cvs:bundles/com.idega.webface.bundle</connection>
        <developerConnection>scm:cvs:ext:idegaweb@einstein.idega.is:/idega/cvs:bundles/com.idega.webface.bundle</developerConnection>
    </repository>
    <versions/>
    <branches/>
    <mailingLists>
        <mailingList>
            <name>${pom.name} Dev List</name>
        </mailingList>
        <mailingList>
            <name>${pom.name} User List</name>
        </mailingList>
    </mailingLists>
    <developers>
        <developer>
            <id>tryggvil</id>
            <name>Tryggvi Larusson</name>
            <email>tryggvi@idega.is</email>
            <organization>idega software</organization>
            <roles/>
        </developer>
    </developers>
    <dependencies>
        <dependency>
            <groupId>jdom</groupId>
            <artifactId>jdom</artifactId>
            <version>b9-rc2</version>
            <type>jar</type>
            <url>http://www.jdom.org/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>servletapi</groupId>
            <artifactId>servletapi</artifactId>
            <version>2.3</version>
            <type>jar</type>
            <url>http://java.sun.com/products/servlet/docs.html</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>cos</groupId>
            <artifactId>cos</artifactId>
            <version>05Nov2002</version>
            <type>jar</type>
            <url>http://www.servlets.com/cos/</url>
            <properties/>
        </dependency>
        <dependency>
            <groupId>jsf</groupId>
            <artifactId>jsf-api</artifactId>
            <version>1.0</version>
            <type>jar</type>
            <url>http://java.sun.com/j2ee/javaserverfaces/</url>
            <properties/>
        </dependency>
    </dependencies>
    <build>
        <sourceDirectory>src/java</sourceDirectory>
        <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
        </unitTest>
    </build>
    <reports>
        <report>maven-tasklist-plugin</report>
        <report>maven-changelog-plugin</report>
        <report>maven-developer-activity-plugin</report>
        <report>maven-simian-plugin</report>
        <report>maven-jcoverage-plugin</report>
        <report>maven-faq-plugin</report>
        <report>maven-file-activity-plugin</report>
        <report>maven-changes-plugin</report>
    </reports>
</project>
